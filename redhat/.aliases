# .aliases for redhat
# Author: Haoran Geng

# User specific aliases and functions
# To ignore alias, run cmd prepened with \
# or disable an alias altogether with unalias
# To get alias def, just use alias name
# alias name='' or name="" both ok

clsourquotes() {
	clear
	source ~/.randomquotes;
	# source ~/.randomquotes | lolcat # dont change
}

geditruninbg() {
    gedit $1 &
}

cdpluslscf() {
    cd $1
    ls -CF
}

gadplusgcm() {
    git add .
    git commit -m $1
}

alias sudo='sudo '
alias cl='clsourquotes'
alias l='ls -CF'
alias ll='ls -AhF'
alias lll='ll -l'
alias la='ls -A'
alias sl='sl -e'
alias c='cd'
alias cdl='cdpluslscf'
alias cdb='cd ..'
alias cdbb='cd ../..'
alias cdbbb='cd ../../..'
alias cdbbbb='cd ../../../..'
alias cdbbbbb='cd ../../../../..'
# alias dc='cd'

alias mv='mv -i'
alias cp='cp -i'
# Do not alias rm -vI. Cuz if you used to it, 
# you will expect rm prompt you by default
# So do not change the original behavior of rm
# alias rm='rm -vI'
alias rm='echo "rm is disabled. use remove"'
alias remove='/bin/rm -vI'
# alias remove='/bin/rm -vi'
# use sudo removegit
alias removegit='remove -r .git'

alias mkdir='mkdir -p'
alias df='df -h'
alias xo='xdg-open'
alias so='source'
# alias sed='sed -E'

alias v='vim'
alias gedit='geditruninbg'

alias gs='git status'
alias gad='git add .'
alias gcm='git commit -m'
alias gac='gadplusgcm'
alias glog='git log'
alias gref='git reflog'
alias gldag='git log --all --graph --decorate'

